<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping default-lazy="false" package="net.pureessence.example.domain">

	<class name="Job" table="job" >

		<id name="id" column="id" type="java.lang.Long">
			<generator class = "identity" />
		</id>

		<property name="jobName" length="10" />
		<property name="jobDescription" length="100" />
		<property name="requestTime" type="timestamp" />

	</class>
</hibernate-mapping>